# Testing Environment Variables for EduProPyth Backend
# This file contains safe default values for testing and CI/CD

# Django Core Settings
DEBUG=True
SECRET_KEY=test-secret-key-change-in-production
DJANGO_SETTINGS_MODULE=config.settings.develop

# Database Configuration (for testing)
DB_NAME=edupropyth_test
DB_USER=postgres
DB_PASSWORD=postgres
DB_HOST=localhost
DB_PORT=5432

# OAuth Configuration (fake values for testing)
GOOGLE_CLIENT_ID=fake-google-client-id-for-testing
GOOGLE_CLIENT_SECRET=fake-google-secret-for-testing
GITHUB_CLIENT_ID=fake-github-client-id-for-testing
GITHUB_CLIENT_SECRET=fake-github-secret-for-testing
MICROSOFT_CLIENT_ID=fake-microsoft-client-id-for-testing
MICROSOFT_CLIENT_SECRET=fake-microsoft-secret-for-testing

# Email Configuration (console backend for testing)
EMAIL_BACKEND=django.core.mail.backends.console.EmailBackend
EMAIL_HOST=localhost
EMAIL_PORT=587
EMAIL_USE_TLS=True
EMAIL_HOST_USER=test@example.com
EMAIL_HOST_PASSWORD=test-password

# Redis Configuration (optional for testing)
REDIS_URL=redis://localhost:6379/0

# Celery Configuration (for async tasks - optional)
CELERY_BROKER_URL=redis://localhost:6379/0
CELERY_RESULT_BACKEND=redis://localhost:6379/0

# API Configuration
API_URL=http://localhost:8000/api
FRONTEND_URL=http://localhost:5173

# File Upload Settings
MEDIA_ROOT=/tmp/edupropyth_media
STATIC_ROOT=/tmp/edupropyth_static

# Logging Level
LOG_LEVEL=DEBUG

# Security Settings (relaxed for testing)
ALLOWED_HOSTS=localhost,127.0.0.1,testserver
CORS_ALLOWED_ORIGINS=http://localhost:5173,http://127.0.0.1:5173

# Test Database Settings
TEST_RUNNER=django.test.runner.DiscoverRunner
