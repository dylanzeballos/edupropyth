{
  "name": "edupropyth",
  "version": "1.0.0",
  "description": "Este es un proyecto de la materia de generacion de software de la carrera de ingenieria de sistemas de la universidad mayor de san simon donde desarrollaremos un laboratorio de programacion en python aplicando buenas practicas de desarrollo y arquitectura de software",
  "main": "commitlint.config.js",
  "directories": {
    "doc": "docs"
  },
  "scripts": {
    "test": "echo \"Error: no test specified\" && exit 1",
    "prepare": "husky",
    "lint:frontend": "cd frontend && npm run lint",
    "lint:frontend:staged": "cd frontend && npx eslint --fix",
    "lint:backend": "cd backend && npx eslint \"{src,apps,libs,test}/**/*.ts\" --max-warnings=0",
    "lint:backend:staged": "cd backend && npm run lint",
    "lint": "npm run lint:frontend && npm run lint:backend",
    "test:ci": "pwsh -ExecutionPolicy Bypass -File ./scripts/test-ci-local.ps1"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/dylanzeballos/edupropyth.git"
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "type": "commonjs",
  "bugs": {
    "url": "https://github.com/dylanzeballos/edupropyth/issues"
  },
  "homepage": "https://github.com/dylanzeballos/edupropyth#readme",
  "devDependencies": {
    "husky": "^9.1.7",
    "lint-staged": "^15.2.10"
  },
  "lint-staged": {
    "frontend/src/**/*.{js,jsx,ts,tsx}": [
      "scripts/lint-frontend.bat"
    ],
    "backend/**/*.py": [
      "scripts/lint-backend.bat"
    ]
  }
}
